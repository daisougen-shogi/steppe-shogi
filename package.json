  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocketberserker/steppe-shougi"
  },
  "dependencies": {
    "mobx": "^4.2.0",
    "mobx-react": "^5.1.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@types/node": "^10.0.2",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "css-loader": "^0.28.11",
    "electron": "^1.8.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "shx": "^0.2.2",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.2.0",
    "typescript": "2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": false
